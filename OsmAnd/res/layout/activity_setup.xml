<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_setup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="js.myroute.Activity.SetupActivity">
    <!--android:paddingBottom="@dimen/activity_vertical_margin"-->
    <!--android:paddingLeft="@dimen/activity_horizontal_margin"-->
    <!--android:paddingRight="@dimen/activity_horizontal_margin"-->
    <!--android:paddingTop="@dimen/activity_vertical_margin"-->


    <Button
        android:text="Choose on map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="chooseOnMap"
        android:id="@+id/button_choose_on_map"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Current Location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="useCurrentLocation"
        android:id="@+id/button_current_location"
        android:layout_marginBottom="48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Where would you like to start your route?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_marginBottom="11dp"
        android:layout_above="@+id/button_current_location"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Choose a lenght for your route:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:id="@+id/textView10"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <SeekBar
        android:layout_width="match_parent"
        android:id="@+id/seekBar2"
        android:max="100"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/textView10"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2.0 km"
        android:id="@+id/textView5"
        android:layout_below="@+id/seekBar2"
        android:layout_centerHorizontal="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <CheckBox
        android:text="Use same location for start and end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox"
        android:onClick="clickCheckboxSameEndAsStart"
        android:layout_above="@+id/textView9"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:layout_weight="1"
        android:text="Importance of parameters:"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="View:"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/spinner_elevation"
        android:layout_toStartOf="@+id/textView9" />

    <Spinner
        android:id="@+id/spinner_view"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView6"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Elevation:"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/spinner_environment"
        android:layout_alignStart="@+id/textView6" />

    <Spinner
        android:id="@+id/spinner_elevation"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView8"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Environment:"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/textView8" />

    <Spinner
        android:id="@+id/spinner_environment"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView12"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
